<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DogProfileActivity">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        >



        <LinearLayout
            android:id="@+id/dog_profile_topsection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dog_profile_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:layout_margin="0dp"
                android:padding="0dp"
                app:srcCompat="@drawable/pug" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dog_profile_middlesection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dog_profile_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/dogprofilename"
                android:textSize="40dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dog_profile_bottomsection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:padding="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button321"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:background="@color/pink100"
                android:visibility="invisible"
                android:text="Button" />

            <Button
                android:id="@+id/dog_profile_editprofile_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:paddingRight="0dp"
                android:paddingLeft="10dp"
                android:layout_weight="0.9"
                android:background="@color/pink100"
                android:text="@string/editdogprofilebutton" />

            <Button
                android:id="@+id/button3212"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.2"
                android:background="@color/pink100"
                android:visibility="invisible"
                android:text="Button" />

            <Button
                android:id="@+id/dog_profile_editvaccine_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:paddingRight="0dp"
                android:paddingLeft="10dp"
                android:background="@color/pink100"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:text="@string/vaccine" />

            <Button
                android:id="@+id/button212"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@color/pink100"
                android:visibility="invisible"
                android:text="Button" />
        </LinearLayout>




    </LinearLayout>
</android.support.constraint.ConstraintLayout>