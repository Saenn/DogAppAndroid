<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDomestic3Old"
    android:background="@color/pink50"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/headerDomestic3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/pink600"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/header_mandatory"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressDomestic3"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/pinkA400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerDomestic3" />

        <LinearLayout
            android:id="@+id/domestic3_fullfrontal_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/progressDomestic3">

            <ImageView
                android:id="@+id/domestic3_frontpic"
                android:layout_width="190dp"
                android:layout_height="160dp"
                android:layout_marginRight="50dp"
                app:srcCompat="@drawable/straight"
                 />

            <Button
                android:id="@+id/domestic3_addfrontpic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/roundbutton"
                android:gravity="center_vertical|center_horizontal"
                android:text="Add"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/domestic3_sideview_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/domestic3_fullfrontal_layout"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/domestic3_sidepic"
                android:layout_width="190dp"
                android:layout_height="160dp"
                android:layout_marginRight="50dp"
                app:srcCompat="@drawable/side" />

            <Button
                android:id="@+id/domestic3_addsidepic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/roundbutton"
                android:gravity="center_vertical|center_horizontal"
                android:text="Add" />

        </LinearLayout>


        <Button
            android:id="@+id/domestic3_nextButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/pink300"
            android:text="@string/nextButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/domestic3_sideview_layout" />

    </android.support.constraint.ConstraintLayout>
    </ScrollView>

