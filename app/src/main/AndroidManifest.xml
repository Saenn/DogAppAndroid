            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AddDomestic4"
            android:launchMode="standard"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".EditDomestic"
            android:launchMode="standard"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".EditVaccine"
            android:launchMode="standard"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".EditStray"
            android:launchMode="standard"
            android:windowSoftInputMode="adjustPan" />
